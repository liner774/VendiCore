@model VendiCore.Models.Products

@{
    ViewData["Title"] = "Create Product";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h4><i class="bi bi-plus-circle"></i> Create Product</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Product Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" class="form-control" placeholder="Price (USD)" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="QuantityAvailable" class="form-label"></label>
                            <input asp-for="QuantityAvailable" class="form-control" placeholder="Quantity Available" />
                            <span asp-validation-for="QuantityAvailable" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Save</button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary ms-2"><i class="bi bi-arrow-left"></i> Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
