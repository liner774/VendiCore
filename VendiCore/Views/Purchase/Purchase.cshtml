@model IEnumerable<VendiCore.Models.Products>

@{
    ViewData["Title"] = "Purchase Products";
}

<div class="container">
    <h1 class="my-4">Purchase Products</h1>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">Price: @product.Price.ToString("C")</p>
                        <p class="card-text">Available Quantity: @product.QuantityAvailable</p>
                        <a href="@Url.Action("PurchaseProduct", "Purchase", new { id = product.ID })" class="btn btn-primary">
                            <i class="bi bi-cart"></i> Purchase
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
